<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:gravity="center"
    tools:context=".fragments.ViewsFragment">

    <TextView
        android:id="@+id/todoLabel"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="30dp"
        android:fontFamily="@font/alata"
        android:text="To-Do App Redirect"
        android:textColor="@color/grey_tint_5"
        android:textSize="15sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <Button
        android:id="@+id/todoBtn"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="30dp"
        android:background="@drawable/transparent_bg_bordered_button"
        android:fontFamily="@font/alata"
        android:text="To-Do App"
        android:textColor="@color/grey_tint_5"
        android:textSize="20sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/todoLabel" />

    <TextView
        android:id="@+id/alarmLabel"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="30dp"
        android:fontFamily="@font/alata"
        android:text="Tap to set an Alarm!"
        android:textColor="@color/grey_tint_5"
        android:textSize="15sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/todoBtn" />

    <Button
        android:id="@+id/alarmBtn"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="30dp"
        android:background="@drawable/transparent_bg_bordered_button"
        android:fontFamily="@font/alata"
        android:text="Set Alarm"
        android:textColor="@color/grey_tint_5"
        android:textSize="20sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/alarmLabel" />

    <TextView
        android:id="@+id/tutorialLabel"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="30dp"
        android:fontFamily="@font/alata"
        android:text="Choose your desired course!"
        android:textColor="@color/grey_tint_5"
        android:textSize="15sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/alarmBtn" />

    <Button
        android:id="@+id/tutorialBtn"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="30dp"
        android:background="@drawable/transparent_bg_bordered_button"
        android:fontFamily="@font/alata"
        android:text="Tutorial Selection"
        android:textColor="@color/grey_tint_5"
        android:textSize="20sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/tutorialLabel" />

    <TextView
        android:id="@+id/tablayoutLabel"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="30dp"
        android:fontFamily="@font/alata"
        android:text="Tap to view TabLayout Example!"
        android:textColor="@color/grey_tint_5"
        android:textSize="15sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/tutorialBtn" />

    <Button
        android:id="@+id/tabLayoutBtn"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="30dp"
        android:background="@drawable/transparent_bg_bordered_button"
        android:fontFamily="@font/alata"
        android:text="TabLayout"
        android:textColor="@color/grey_tint_5"
        android:textSize="20sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/tablayoutLabel" />

    <TextView
        android:id="@+id/pagingLabel"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="30dp"
        android:fontFamily="@font/alata"
        android:text="Tap to view Pagination Example!"
        android:textColor="@color/grey_tint_5"
        android:textSize="15sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/tabLayoutBtn" />

    <Button
        android:id="@+id/pagingBtn"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="30dp"
        android:background="@drawable/transparent_bg_bordered_button"
        android:fontFamily="@font/alata"
        android:text="Pagination"
        android:textColor="@color/grey_tint_5"
        android:textSize="20sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/pagingLabel" />


</androidx.constraintlayout.widget.ConstraintLayout>